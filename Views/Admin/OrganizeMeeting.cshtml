                <div class="col-md-2">
                </div>
            </div>
        </div>
    </div>
</div>

@section reg{
    <script type="text/javascript">

        //$('#picker').dateTimePicker({
        //    dateFormat: "DD-MM-YYYY HH:mm",
        //    locale: 'en',
        //    showTime: true,
        //    selectData: "now",
        //    positionShift: { top: 20, left: 0 },
        //    title: "Select Date and Time",
        //    buttonTitle: "Select"
        //});


        $(window).bind("beforeunload", function () {
            return confirm("Do you really want to close?");
        })
        $(function () {
            $('#Date').datetimepicker();
        });
        $(function () {

            var $validator = $("#addmeet-form").validate({
                // Rules for form validation
                rules: {
                    
                    Date: {
                        required: true
                    },
                    Location: {
                        required:true
                    },
                    Desc: {
                        required:true
                    },
                    Grps: {
                        required:true
                    },
                    Amount: {
                        required: true,
                        number:true
                    }
                },

                // Messages for form validation
                messages: {
                    Date: {
                        required: "Please Enter Date."
                    },
                    Location: {
                        required: "Please Enter Location."
                    },
                    Desc: {
                        required: "Please Enter Description."
                    },
                    Grps: {
                        required: "Please Select a Group."
                    },
                    Amount: {
                        required: "Please Enter the Amount",
                        number: "Please Enter valid Numerical Amount"
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });


            //$(function () {
            //    $('#Date').datepicker({
            //        dateFormat: 'dd/M/yy',
            //        changeMonth: true,
            //        changeYear: true,
            //        yearRange: '2000:2100'

            //    });
            //})


            $("#addmeet").click(function () {
                $("#ErrorMsg").html();
                if ($("#addmeet-form").valid()) {
                    $.ajax({
                        type: "post",
                        datatype: "json",
                        url: '@Url.Action("OrganizeMeet", "Admin")',
                        data: {
                            Date: $("#Date").val(), Location: $("#Location").val(), Desc: $("#Desc").val(), Grps: $("#Grps").val(), Amount: $("#Amount").val()
                        },
                        success: function (res) {
                            if (res.toString() == "success") {
                                alert("Meeting Scheduled.");
                                window.location.href = "@Url.Action("Home", "Admin")";
                            }
                            else {
                                $("#ErrorMsg").html(res.toString());
                            }
                        },
                        error: function (res) {
                            $("#ErrorMsg").html('Error While Processing Data');
                        }
                    });
                }
            });
        });
    </script>
}

